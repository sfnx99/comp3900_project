{
  "compilerOptions": {
    "module": "ESNext",          // Ensure this is set to ESNext
    "target": "ESNext",          // Set the target to ESNext or ES6
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true                  // Ensure this option is set to true
  }
}
